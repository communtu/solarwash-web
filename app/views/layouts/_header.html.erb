<header class="navbar navbar-inverse">
  <div class="navbar-inner">

    <div class="container-fluid">
      <div class="row-fluid">
        <%= link_to "SolarWash ", root_path, class: "brand" %>
        <i class="icon-tint icon_baseline brand"></i><i <%= vacant_device(0) %> ></i>

        <i class="icon-fire icon_baseline brand"></i><i <%= vacant_device(1) %> ></i>

        <ul class="nav pull-right">
          <li><%= link_to '<i class="icon-tasks icon_baseline"></i> Aufträge'.html_safe, my_jobs_path%></li>
          <li><%= link_to '<i class="icon-briefcase icon_baseline"></i> Geräte'.html_safe, devices_path%></li>
          <li><%= link_to '<i class="icon-cog icon_baseline"></i> Einstellungen'.html_safe, edit_user_registration_path%></li>
          <% if current_admin_user %>
            <li><%= link_to '<i class="icon-dashboard icon_baseline"></i> Administration'.html_safe, admin_root_path%></li>
          <% end %>
        </ul>  
      </div>
  
      <div class="row-fluid">
        <% if user_signed_in? %>
        <span class="white">Angemeldet als <%= current_user.email %> &bull;</span>
        <%= link_to 'Abmelden', destroy_user_session_path, :method => 'delete', :class => 'novisit', :confirm => "Wirklich abmelden?" %>
        <% end %>
      </div>
      
    </div>
      
  </div>
</header>
