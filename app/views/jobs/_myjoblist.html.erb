<table class="table">
  <tr>
    <th>Gerät</th>
    <th>Programm</th>
    <th>Status</th>
    <th>Auftrag eingestellt</th>
    <th>Fertig bis spätestens</th>
    <th>Start</th>
  </tr>

  <% @jobs.each do |job| %> 
    <% if (old_jobs && job.finished == 1) || (!old_jobs && job.finished == 0) %>
      <tr>
        <td><%= Device.find(job.device_id).name %></td>
        <td><%= Program.find(job.program_id).name %></td>      
        <td><%= job.finished %></td>
        <td><%= job.start_of_timespan %></td>
        <td><%= job.end_of_timespan %></td>
        <td><%= job.start %></td>
      </tr>
    <% end %>
  <% end %>

</table>