<h1>Neuer Auftrag</h1>

%h3
  für das Gerät
  = @job.device.name

= simple_form_for [@job.device, @job], html: {class: 'form-horizontal'} do |f|

  = f.hidden_field :user_id, :value => 1 # TODO tatsaechliche User_ID nehmen
  = f.input :program_id, collection: @job.device.programs, label:"Programm"
  = f.hidden_field :finished, :value => 0
  = f.hidden_field :start_of_timespan, :start_of_timespan => "" # TODO immer aktuelle Zeit
  = f.input :end_of_timespan, label:"Fertig bis spätestens"
  = f.full_error :token

  .form-actions
    = f.button :submit, class: 'btn-primary'
