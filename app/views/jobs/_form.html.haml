= simple_form_for @job, html: {class: 'form-horizontal'} do |f|

  = f.hidden_field :device_id, :value => dev_id
  = f.hidden_field :user_id, :value => 1 # TODO tatsaechliche User_ID nehmen
  = f.input :program_id, collection: Device.find(dev_id).programs, label:"Programm"
  = f.hidden_field :finished, :value => 0
  = f.hidden_field :start_of_timespan, :start_of_timespan => "" # TODO immer aktuelle Zeit
  = f.input :end_of_timespan, label:"Fertig bis sp√§testens"
  = f.full_error :token

  .form-actions
    = f.button :submit, class: 'btn-primary'
