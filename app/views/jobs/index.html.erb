<h1>Alle Aufträge</h1>

<table class="table">
  <tr>
    <th>Gerät</th>
    <th>Auftraggeber</th>
    <th>Programm</th>
    <th>Status</th>
    <th>Auftrag eingestellt</th>
    <th>Fertig bis spätestens</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.device_id %></td>
    <td><%= job.user_id %></td>
    <td><%= Program.find(job.program_id).name %></td>
    <td><%= job.finished %></td>
    <td><%= job.start_of_timespan %></td>
    <td><%= job.end_of_timespan %></td>
    <td><%= link_to 'Anzeigen', job %></td>
    <td><%= link_to 'Bearbeiten', edit_job_path(job) %></td>
    <td><%= link_to 'Löschen', job, method: :delete, data: { confirm: 'Bist Du sicher?' } %></td>
  </tr>
<% end %>
</table>

