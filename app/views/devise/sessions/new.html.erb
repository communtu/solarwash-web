<div class="container">
  <div class="row">
    <div class="offset3 span6">
<h2 class="center">Anmelden</h2>
<%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'} do |f| %>
  <div class="form-inputs form-horizontal">
    <%= f.input :email, :required => false, :autofocus => true, label:"Email" %>
    <%= f.input :password, :required => false, label:"Passwort" %>
    <%= f.input :remember_me, label:"Angemeldet bleiben", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Anmelden" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>