<h2>Passwort ändern</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Neues Passwort", :required => true, :autofocus => true, label:"Passwort" %>
    <%= f.input :password_confirmation, :label => "Neues Passwort bestätigen", :required => true, label:"Passwort wiederholen" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Passwort ändern" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
